{
  "name": "filmreel",
  "description": "A torrent based video streaming client",
  "version": "1.0.0",
  "author": {
    "name": "Kirpal Demian",
    "email": "kjdemian@gmail.com",
    "url": "https://kirp.al"
  },
  "repository": "Kirpal/filmreel",
  "bugs": "https://github.com/Kirpal/filmreel/issues",
  "main": "index.js",
  "dependencies": {
    "express": "^4.14.0",
    "mv": "^2.1.1",
    "node-notifier": "^4.6.1",
    "pump": "^1.0.2",
    "range-parser": "^1.2.0",
    "request": "^2.79.0",
    "torrent-stream": "^1.0.3"
  },
  "build": {
    "appId": "com.kirpal.filmreel",
    "productName": "FilmReel",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "files": [
      "**/*",
      "!web/*"
    ],
    "nsis": {
      "artifactName": "${productName} Setup.${ext}"
    },
    "mac": {
      "category": "public.app-category.video"
    }
  },
  "scripts": {
    "pack": "./node_modules/.bin/build --dir",
    "dist": "./node_modules/.bin/build"
  },
  "devDependencies": {
    "electron": "^1.4.13",
    "electron-builder": "^11.4.4"
  }
}
